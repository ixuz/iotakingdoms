{
  "name": "iotakingdoms",
  "version": "0.0.2",
  "description": "An IOTA based app",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "postinstall": "husky install",
    "all": "npm run clean && npm run lint && npm run build && npm run test",
    "clean": "npm run clean:dist && npm run clean:coverage",
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage",
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:src": "eslint src",
    "lint:test": "eslint test",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config=./jest.coverage.config.js test/unit --",
    "test:integration": "jest --coverage=false test/integration",
    "start": "node ./dist/index.js",
    "watch": "nodemon",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Anton Wiklund",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.4.13",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "jest": "^27.1.1",
    "nodemon": "^2.0.12",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "save-dev": "^0.0.1-security",
    "tsyringe": "^4.6.0",
    "yargs": "^17.1.1"
  },
  "files": [
    "config",
    "dist"
  ]
}
